# Application Configuration
APP_NAME=MicroLLM-PrivateStack
APP_ENV=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# Security
JWT_SECRET_KEY=CHANGE-THIS-TO-RANDOM-SECRET-KEY-IN-PRODUCTION
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# LLM Configuration
MODEL_PATH=./models/deepseek-r1-1.5b-q4.gguf
MODEL_CONTEXT_LENGTH=2048
MODEL_TEMPERATURE=0.3
MODEL_TOP_P=0.9
MODEL_THREADS=4
MODEL_MAX_TOKENS=512

# RAG Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_STORE_PATH=./data/vector_store.db
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RAG_TOP_K=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE=100
CACHE_TTL_SECONDS=3600

# Database
DATABASE_PATH=./data/users.db

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FILE=./logs/microllm.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=200

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Default Admin Credentials (CHANGE IMMEDIATELY)
DEFAULT_ADMIN_EMAIL=admin@microllm.local
DEFAULT_ADMIN_PASSWORD=changeme123
