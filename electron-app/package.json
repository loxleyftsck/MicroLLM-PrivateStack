{
  "name": "microllm-privatestack",
  "version": "1.0.1",
  "description": "MicroLLM-PrivateStack - On-Premise AI Assistant",
  "main": "main.js",
  "author": "Herald Michain Samuel Theo Ginting",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.microllm.privatestack",
    "productName": "MicroLLM PrivateStack",
    "copyright": "Copyright Â© 2026 Herald Michain Samuel Theo Ginting",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "icon.png"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!**/__pycache__/**"]
      },
      {
        "from": "../frontend",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "../models",
        "to": "models",
        "filter": ["**/*"]
      },
      {
        "from": "../docs",
        "to": "docs",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MicroLLM PrivateStack"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Office"
    }
  }
}
